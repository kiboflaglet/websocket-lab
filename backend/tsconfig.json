{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "outDir": "dist",
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}